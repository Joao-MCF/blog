<h1 class="text-center main-title">
  <%= @article.title %>
</h1>

<div class="text-body">
  <p>
    <%= @article.body %>
  </p>
</div>

<div class="text-footer">
  <p class="text-author">
    <strong>Written by:</strong>
    <%= @article.user.name %>
  </p>

  <% if can? :update, @article %> <%= link_to 'Edit', edit_article_path(@article), class: 'btn-default btn-primary' %><% end %>
  <%= link_to 'Back', articles_path, class: 'btn-default'%>
</div>

<div>

  <p class="main-title">Comments: </p>

  <%= render @article.comments%>
  <%= render 'comments/form' %>
</div>