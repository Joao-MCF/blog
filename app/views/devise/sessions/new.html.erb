<div class="login">
  <div class="login-field">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="login-form">
        <h2 class="main-title">Log in</h2>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "login-input" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", :class => "login-input" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="login-actions">
          <%= f.submit "Log in", :class => "btn-default btn-primary btn-block" %>
        </div>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <div class="login-side">
  </div>
</div>

