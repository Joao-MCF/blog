<div class="login">
  <div class="login-field">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="login-form">
        <h2 class="main-title">Forgot your password?</h2>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "login-input" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions", :class => "btn-default btn-primary btn-block" %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="login-side"></div>
</div>