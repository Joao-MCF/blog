<div class="login">
  <div class="login-field">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="login-form">
        <h2 class="main-title">Sign up</h2>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.text_field :name, placeholder: "Name", :class => "login-input" %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", :class => "login-input" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", :class => "login-input" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", :class => "login-input" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => "btn-default btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

  <div class="login-side">
  </div>
</div>