<div class="card">
  <p>
    <strong>Name:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Role:</strong>
    <%= @user.role.name %>
  </p>

  <p>
    <strong>Email: </strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>Joined on:</strong>
    <%= @joined_on %>
  </p>

  <p>
    <strong>Last logged in on:</strong>
    <%= @last_login %>
  </p>

  <p>
    <strong>No. times logged in:</strong>
    <%= @user.sign_in_count %>
  </p>
</div>

<%= link_to 'Edit', edit_user_path(@user), :class => "btn-default btn-primary" %> |
<%= link_to 'Back', users_path, :class => "btn-default" %>
